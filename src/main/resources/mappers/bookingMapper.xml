<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.starkyb.spring.lesson06.dao.BookingDAO">
 	<select id="selectBooking" resultType="map">
 		SELECT
 			`id`
 			, `name`
 			, `date`
 			, `day`
 			, `headcount`
 			, `phoneNumber`
 			, `state`
 		FROM
 			`booking`;
 	</select>
 	
 	<delete id="deleteBooking" parameterType="int">
 		DELETE FROM `booking`
 		WHERE `id` = #{id};
 	</delete>
 </mapper>